                        <AnchorPane fx:id="dashboardView" style="-fx-background-color: #f5f5f5;">
                            <!-- Dashboard content -->
                        </AnchorPane>

                        <!-- Sonarr View (Previous content remains the same) -->
                        <AnchorPane fx:id="sonarrView" style="-fx-background-color: #f5f5f5;" visible="false">
                            <!-- Sonarr content -->
                        </AnchorPane>

                        <!-- Jellyfin View (Previous content remains the same) -->
                        <AnchorPane fx:id="jellyfinView" style="-fx-background-color: #f5f5f5;" visible="false">
                            <!-- Jellyfin content -->
                        </AnchorPane>

                        <!-- Docker View (Previous content remains the same) -->
                        <AnchorPane fx:id="dockerView" style="-fx-background-color: #f5f5f5;" visible="false">
