                                <Button fx:id="dashboardBtn" onAction="#showDashboardView" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="250.0" style="-fx-background-color: #2e2e42; -fx-text-fill: white;" text="Dashboard">
