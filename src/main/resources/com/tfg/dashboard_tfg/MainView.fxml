                                </Button>
                                <Button fx:id="dockerBtn" onAction="#showDockerView" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="250.0" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Docker">
