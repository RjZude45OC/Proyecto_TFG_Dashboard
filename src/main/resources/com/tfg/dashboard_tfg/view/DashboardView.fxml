                          skinType="RADAR_CHART"
                          unit="\%"
                          decimals="1"
                          minValue="0"
                          maxValue="100"
                          thresholdVisible="true"
                          threshold="85"
                          shadowsEnabled="true"
                          onMouseClicked="#onclicktile"
                    >
                        <gradientStops>
