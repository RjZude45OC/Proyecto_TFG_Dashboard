                    <Tile fx:id="systemStatusTile"
                          GridPane.columnIndex="0"
                          GridPane.rowIndex="0"
                          title="Server Status"
                          description="Media Server Health"
                          text=""
                          textSize="BIGGER"
                          valueColor="#2ecc71"
                          animated="true"
                          skinType="GAUGE"
                          decimals="1"
                          minValue="0"
                          maxValue="100"
                          startFromZero="false"
                          threshold="25"
                          thresholdVisible="true"
                          onMouseClicked="#onclicktile"
                    />

                    <Tile fx:id="storageTile"
                          GridPane.columnIndex="1"
                          GridPane.rowIndex="0"
                          title="Storage"
                          description="Total Space"
                          text=""
                          textSize="BIGGER"
                          animated="true"
                          skinType="GAUGE"
                          unit="\%"
                          decimals="1"
                          minValue="0"
                          maxValue="100"
                          thresholdVisible="true"
                          threshold="85"
                          shadowsEnabled="true"
                          onMouseClicked="#onclicktile"
                    />

                    <Tile fx:id="networkTile"
                          GridPane.columnIndex="2"
                          GridPane.rowIndex="0"
                          title="Network"
                          description="Bandwidth"
                          textSize="BIGGER"
                          animated="true"
                          skinType="SMOOTH_AREA_CHART"
                          unit="Kbps"
                          smoothing="true"
                          chartGridColor="rgba(255,255,255,0.1)"
                          decimals="1"
                          minValue="0"
                          maxValue="100"
                          onMouseClicked="#onclicktile"
                    />

                    <Tile fx:id="cpuTile"
                          GridPane.columnIndex="3"
                          GridPane.rowIndex="0"
                          title="CPU Usage"
                          description="Processing Load"
                          textSize="BIGGER"
                          animated="true"
                          animationDuration="1000"
                          skinType="GAUGE_SPARK_LINE"
                          unit="\%"
                          decimals="1"
                          minValue="0"
                          maxValue="100"
                          averagingPeriod="10"
                          startFromZero="false"
                          threshold="80"
                          thresholdVisible="true"
                          onMouseClicked="#onclicktile"
                    />

                    <Tile fx:id="memoryTile"
                          GridPane.columnIndex="0"
                          GridPane.rowIndex="1"
                          title="Memory"
                          description="RAM Usage"
                          textSize="BIGGER"
                          animated="true"
                          animationDuration="1000"
                          skinType="CIRCULAR_PROGRESS"
                          unit="\%"
                          decimals="1"
                          minValue="0"
                          maxValue="100"
                          barBackgroundColor="rgba(200,200,200,0.1)"
                          threshold="90"
                          thresholdVisible="true"
                          onMouseClicked="#onclicktile"
                    />

                    <Tile fx:id="temperatureTile"
                          GridPane.columnIndex="1"
                          GridPane.rowIndex="1"
                          title="Server Temp"
                          description="Hardware Monitoring"
                          textSize="BIGGER"
                          unit="°C"
                          animated="true"
                          animationDuration="1000"
                          skinType="GAUGE"
                          decimals="1"
                          minValue="0"
                          maxValue="100"
                          averagingPeriod="10"
                          threshold="80"
                          thresholdVisible="true"
                          sectionsVisible="true"
                          sectionIconsVisible="true"
                          shadowsEnabled="true"
                          onMouseClicked="#onclicktile"
                    />

