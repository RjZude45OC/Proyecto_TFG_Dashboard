<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import eu.hansolo.tilesfx.Tile?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.tfg.dashboard_tfg.viewmodel.DashboardController"
           prefHeight="700.0">
    <AnchorPane>

        <VBox spacing="20.0"
              AnchorPane.bottomAnchor="20.0"
              AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0"
              AnchorPane.topAnchor="20.0"
              style="-fx-border-width: 1;
                 -fx-padding: 20 20 20 20;"
              styleClass="view"
        >

            <Label text="Dashboard"
                   style="-fx-font-size: 28px; -fx-font-weight: bold;">
            </Label>

            <!-- API URL Configuration -->
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="API URL:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="apiUrlField" promptText="Enter API base URL" HBox.hgrow="ALWAYS"/>
                <Button fx:id="applyUrlButton" text="Apply" onAction="#onApplyUrlClicked" styleClass="console-button"/>
            </HBox>

            <HBox spacing="20.0" alignment="CENTER" VBox.vgrow="ALWAYS">
                <VBox style="-fx-background-radius: 5; -fx-padding: 20;"
                      styleClass="dashboard-container"
                      HBox.hgrow="ALWAYS">
                    <Label text="System Status"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Label fx:id="statusLabel"/>
                    <GridPane hgap="20.0" vgap="20.0">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints percentHeight="50"/>
                            <RowConstraints percentHeight="50"/>
                        </rowConstraints>

                        <Tile fx:id="cpuTile"
                              GridPane.columnIndex="0"
                              GridPane.rowIndex="0"
                              title="CPU Usage"
                              description="Processing Load"
                              textSize="BIGGER"
                              animated="true"
                              animationDuration="1000"
                              skinType="GAUGE_SPARK_LINE"
                              unit="\%"
                              decimals="1"
                              minValue="0"
                              maxValue="100"
                              averagingPeriod="10"
                              startFromZero="false"
                              threshold="80"
                              thresholdVisible="true"
                              onMouseClicked="#onclicktile"
                        />

                        <Tile fx:id="networkTile"
                              GridPane.columnIndex="1"
                              GridPane.rowIndex="0"
                              title="Network"
                              description="Bandwidth"
                              textSize="BIGGER"
                              animated="true"
                              skinType="SMOOTH_AREA_CHART"
                              unit="Kbps"
                              smoothing="true"
                              chartGridColor="rgba(255,255,255,0.1)"
                              minValue="0"
                              maxValue="100"
                              onMouseClicked="#onclicktile"
                        />

                        <Tile fx:id="memoryTile"
                              GridPane.columnIndex="2"
                              GridPane.rowIndex="0"
                              title="Memory"
                              description="RAM Usage"
                              textSize="BIGGER"
                              animated="true"
                              animationDuration="1000"
                              skinType="CIRCULAR_PROGRESS"
                              unit="\%"
                              decimals="1"
                              minValue="0"
                              maxValue="100"
                              barBackgroundColor="rgba(200,200,200,0.1)"
                              threshold="90"
                              thresholdVisible="true"
                              onMouseClicked="#onclicktile"
                        />

                        <Tile fx:id="storageTile"
                              GridPane.columnIndex="3"
                              GridPane.rowIndex="0"
                              title="Storage"
                              description="Total Space"
                              text=""
                              textSize="BIGGER"
                              animated="true"
                              skinType="GAUGE"
                              unit="\%"
                              decimals="1"
                              minValue="0"
                              maxValue="100"
                              thresholdVisible="true"
                              threshold="85"
                              shadowsEnabled="true"
                              onMouseClicked="#onclicktile"
                        />

                        <Tile fx:id="systemStatusTile"
                              GridPane.columnIndex="0"
                              GridPane.rowIndex="1"
                              title="Server Status"
                              description="System Health"
                              text=""
                              textSize="BIGGER"
                              animated="true"
                              skinType="TEXT"
                              onMouseClicked="#onclicktile"
                        />

                        <Tile fx:id="uptimeTile"
                              GridPane.columnIndex="1"
                              GridPane.rowIndex="1"
                              title="System Uptime"
                              description="Server Runtime"
                              textSize="BIGGER"
                              animated="true"
                              animationDuration="1000"
                              skinType="TEXT"
                              text=""
                              shadowsEnabled="true"
                              onMouseClicked="#onclicktile"
                        />

                        <Tile fx:id="jellyfinStatusTile"
                              GridPane.columnIndex="2"
                              GridPane.rowIndex="1"
                              title="Jellyfin"
                              description="Media Server"
                              textSize="BIGGER"
                              animated="true"
                              skinType="SWITCH"
                              text=""
                              shadowsEnabled="true"
                              onMouseClicked="#onclicktile"
                        />

                        <Tile fx:id="dockerStatusTile"
                              GridPane.columnIndex="3"
                              GridPane.rowIndex="1"
                              title="Docker"
                              description="Containers"
                              textSize="BIGGER"
                              animated="true"
                              animationDuration="1000"
                              skinType="BAR_CHART"
                              unit="\%"
                              decimals="1"
                              minValue="0"
                              maxValue="100"
                              thresholdVisible="true"
                              threshold="85"
                              shadowsEnabled="true"
                              onMouseClicked="#onclicktile"
                        />

                    </GridPane>
                </VBox>
            </HBox>
        </VBox>
    </AnchorPane>
    <StackPane fx:id="loadingOverlay"
               style="-fx-background-color: rgba(0, 0, 0, 0.7);"
               StackPane.alignment="CENTER">
        <VBox alignment="CENTER" spacing="20">
            <ProgressIndicator fx:id="loadingIndicator"
                               maxWidth="80"
                               maxHeight="80"/>
            <Label text="Loading..."
                   style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
        </VBox>
    </StackPane>
</StackPane>