<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tfg.dashboard_tfg.viewmodel.dockerViewModel"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #1E1E2E;">

    <VBox spacing="15.0"
          AnchorPane.bottomAnchor="20.0"
          AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0"
          AnchorPane.topAnchor="20.0"
          style="-fx-border-color: #313244;
                 -fx-border-width: 1;
                 -fx-padding: 20 40 0 40;">

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Docker Terminal" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #CDD6F4;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Clear" onAction="#clearTerminal"
                    style="-fx-background-color: #45475A; -fx-text-fill: #CDD6F4; -fx-background-radius: 4;"/>
            <ChoiceBox fx:id="themeSelector" prefWidth="120.0"
                       style="-fx-background-color: #45475A; -fx-mark-color: #CDD6F4; -fx-background-radius: 4;"/>
        </HBox>

        <TextArea fx:id="cliOutput" prefHeight="450.0" wrapText="true" editable="false"
                  style="-fx-font-family: 'JetBrains Mono', 'Fira Code', 'Consolas', monospace;
                         -fx-control-inner-background: #11111B;
                         -fx-text-fill: #A6E3A1;
                         -fx-background-radius: 8;
                         -fx-border-radius: 8;
                         -fx-border-color: #313244;
                         -fx-border-width: 1;
                         -fx-padding: 10;"/>

        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="\$" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #F5C2E7;"/>
            <TextField fx:id="cliInput" HBox.hgrow="ALWAYS" prefHeight="40.0" promptText="Enter docker command..."
                       style="-fx-font-family: 'JetBrains Mono', 'Fira Code', 'Consolas', monospace;
                             -fx-background-color: #313244;
                             -fx-text-fill: #CDD6F4;
                             -fx-prompt-text-fill: #7F849C;
                             -fx-background-radius: 4;
                             -fx-border-radius: 4;
                             -fx-border-color: #45475A;
                             -fx-border-width: 1;
                             -fx-padding: 5 10 5 10;"/>
            <Button text="Execute" prefHeight="40.0" onAction="#executeCommand"
                    style="-fx-background-color: #89B4FA;
                          -fx-text-fill: #11111B;
                          -fx-font-weight: bold;
                          -fx-background-radius: 4;
                          -fx-border-radius: 4;
                          -fx-cursor: hand;"/>
        </HBox>

        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="History:" style="-fx-font-size: 14px; -fx-text-fill: #CDD6F4;"/>
            <ComboBox fx:id="commandHistory" editable="false" prefWidth="400.0"
                      style="-fx-background-color: #313244;
                            -fx-text-fill: #CDD6F4;
                            -fx-background-radius: 4;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="statusLabel" text="Ready" style="-fx-font-size: 14px; -fx-text-fill: #A6E3A1;"/>
        </HBox>
    </VBox>
</AnchorPane>
