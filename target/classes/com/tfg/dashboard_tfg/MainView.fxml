<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.*?>

<AnchorPane prefHeight="750.0" prefWidth="1400.0" styleClass="root" xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tfg.dashboard_tfg.viewmodel.Controller">
    <BorderPane prefHeight="750.0" prefWidth="1400.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <left>
            <VBox prefHeight="750.0" prefWidth="250.0">
                <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="250.0">
                    <Label text="Dashboard" styleClass="title">
                        <font>
                            <Font name="System Bold" size="24.0"/>
                        </font>
                        <HBox.margin>
                            <Insets left="20.0"/>
                        </HBox.margin>
                    </Label>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>

                <VBox prefWidth="250.0" spacing="10.0" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets top="20.0"/>
                    </padding>
                    <Button fx:id="dashboardBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0"
                            onAction="#showDashboardView" prefHeight="50.0" prefWidth="250.0"
                            text="Dashboard" styleClass="icon-style">
                        <graphic>
                            <FontIcon iconLiteral="fas-tachometer-alt" iconSize="19"/>
                        </graphic>
                        <font>
                            <Font size="16.0"/>
                        </font>
                        <padding>
                            <Insets left="20.0"/>
                        </padding>
                    </Button>

                    <Button fx:id="sonarrBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0" onAction="#showSonarrView"
                            prefHeight="50.0" prefWidth="250.0"
                            text="Sonarr">
                        <graphic>
                            <FontIcon iconLiteral="fas-server" iconSize="22"/>
                        </graphic>
                        <font>
                            <Font size="16.0"/>
                        </font>
                        <padding>
                            <Insets left="20.0"/>
                        </padding>
                    </Button>

                    <Button fx:id="jellyfinBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0"
                            onAction="#showJellyfinView" prefHeight="50.0" prefWidth="250.0"
                            text="Jellyfin">
                        <graphic>
                            <FontIcon iconLiteral="mdmz-video_library" iconSize="22"/>
                        </graphic>
                        <font>
                            <Font size="16.0"/>
                        </font>
                        <padding>
                            <Insets left="20.0"/>
                        </padding>
                    </Button>

                    <Button fx:id="dockerBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0" onAction="#showDockerView"
                            prefHeight="50.0" prefWidth="250.0"
                            text="Docker CLI">
                        <graphic>
                            <FontIcon iconLiteral="fab-docker" iconSize="18"/>
                        </graphic>
                        <font>
                            <Font size="16.0"/>
                        </font>
                        <padding>
                            <Insets left="20.0"/>
                        </padding>
                    </Button>

                    <Button fx:id="rssBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0" onAction="#showRssView"
                            prefHeight="50.0" prefWidth="250.0"
                            text="RSS">
                        <graphic>
                            <FontIcon iconLiteral="mdi2r-rss-box" iconSize="22"/>
                        </graphic>
                        <font>
                            <Font size="16.0"/>
                        </font>
                        <padding>
                            <Insets left="20.0"/>
                        </padding>
                    </Button>
                </VBox>

                <VBox VBox.vgrow="NEVER">
                    <HBox>
                        <Button fx:id="loginMenuBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0"
                                onAction="#showLoginForm" prefHeight="50.0" prefWidth="140.0"
                                text="Login">
                            <graphic>
                                <FontIcon iconLiteral="mdi2l-login-variant" iconSize="20"/>
                            </graphic>
                            <font>
                                <Font size="16.0"/>
                            </font>
                            <padding>
                                <Insets left="20.0"/>
                            </padding>
                        </Button>

                        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding:1 0 0 10;">
                            <FontIcon fx:id="lightThemeIcon" iconLiteral="fas-sun" iconSize="16"
                                      visible="false"/>
                            <ToggleButton fx:id="themeToggle" onAction="#toggleTheme" onMouseClicked="#toggleTheme"
                                          prefHeight="15.0" prefWidth="40.0">
                                <graphic>
                                    <StackPane maxHeight="16.0" maxWidth="16.0" style="-fx-background-radius: 10;" styleClass="toggle"/>
                                </graphic>
                            </ToggleButton>
                            <FontIcon fx:id="darkThemeIcon" iconLiteral="fas-moon" iconSize="14"/>
                        </HBox>
                    </HBox>
                </VBox>
            </VBox>
        </left>

        <center>
            <StackPane fx:id="mainStackPane" styleClass="view-box">
                <!-- inject Views-->
            </StackPane>
        </center>
    </BorderPane>
</AnchorPane>
